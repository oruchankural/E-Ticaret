@using E_Ticaret.Models.Siniflar
@model List<Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Index</h2>
<table class="table table-striped">
    <tr>
        <th>Cari Id</th>
        <th>Cari Ad</th>
        <th>Cari Soyad</th>
        <th>Cari Şehir</th>
        <th>Cari Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.CustomerID</td>
            <td>@x.CustomerName</td>
            <td>@x.CustomerSurname</td>
            <td>@x.CustomerCity</td>
            <td>@x.CustoemrMail</td>
            <td><a href="/Customer/CariSil/@x.CustomerID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Customer/CariGetir/@x.CustomerID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Customer/MusteriSatis/@x.CustomerID" class="btn btn-default" style="background-color:lightcoral; color:white;">Satış Geçmişi</a></td>
        </tr>
    }
</table>
<a href="/Customer/YeniCari/" class="btn btn-info">Yeni Cari Ekle</a>

