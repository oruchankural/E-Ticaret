@using E_Ticaret.Models.Siniflar
@model List<KargoDetay>

@{
    ViewBag.Title = "KargoTakip";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}


<br />
@using (Html.BeginForm("KargoTakip", "CustomerPanel", FormMethod.Get))
{
    <p>
        Kargo Takip Numarası: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>Personel</th>
        <th>Alıcı</th>
        <th>Takip Kodu</th>
        <th>Tarih</th>
        <th>Detaylar</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Personel</td>
            <td>@x.Alici</td>
            <td>@x.Takipkodu</td>
            <td>@x.Tarih</td>
            <td><a href="/CustomerPanel/CariKargoTakip/@x.Takipkodu" class="btn btn-warning">Detay</a></td>



        </tr>

    }
</table>

