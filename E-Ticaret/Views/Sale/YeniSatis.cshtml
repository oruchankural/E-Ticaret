@model E_Ticaret.Models.Siniflar.Sale
@{
    ViewBag.Title = "YeniSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Yeni Satış Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.Label("Ürün")
    @Html.DropDownListFor(x => x.Productid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    <br />
    @Html.Label("Cari")
    @Html.DropDownListFor(x => x.Customerid, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    <br />
    @Html.Label("Personel")
    @Html.DropDownListFor(x => x.Staffid, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })
    <br />
    @Html.Label("Miktar")
   <input type="number"  name="Amount" class="form-control" max="250" min="0" checked="checked" id="txt1" onchange="sum();"/>
    <br />
    @Html.Label("Ücret")
   <input type="text" name="Saleprice" class="form-control" max="250" min="0" value="@ViewBag.dgr4" checked="checked" id="txt2" onchange="sum();"/>
    <br />
    @Html.Label("Toplam Tutar")
    @Html.TextBoxFor(x => x.Total, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Satış Yap</button>


</form>
<br />
<input type="text" id="txt3" />
<script>
    function sum() {
        var sayi1 = document.getElementById('txt1').value;
        var sayi2 = document.getElementById('txt2').value;
        var sonuc = parseInt(sayi1) * parseInt(sayi2);
        if (!isNaN(sonuc)) {
            document.getElementById('txt3').value = sonuc;
        }
        
    }
</script>


