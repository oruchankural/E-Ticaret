@using E_Ticaret.Models.Siniflar
@model List<Department>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>ID</th>
        <th>Departman Ad</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>
                @x.DepartmentID
            </td>
            <td>
                @x.DepartmentName
            </td>
            <td><a href="/Departman/DepartmanSil/@x.DepartmentID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Departman/DepartmanGetir/@x.DepartmentID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Departman/DepartmanDetay/@x.DepartmentID" class="btn btn-default" style="background-color:lightcoral;color:white">Detaylar</a></td>
        </tr>

    }
</table>
<a href="/Departman/DepartmanEkle/" class="btn btn-primary">Departman Ekle</a>

