@model E_Ticaret.Models.Siniflar.Class2
  
@{
    ViewBag.Title = "Deneme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="~/Scripts/jquery-3.3.1.min.js"></script>

<script>

    $(function () {

        $('#DrpCategory').change(function () {

            var id = $('#DrpCategory').val();

            $.ajax({

                url: '/Category/UrunGetir',

                data: { p: id },

                type: "POST",

                dataType: "Json",

                success: function (data) {

                    console.log(data);

                    $('#DrpUrun').empty();

                    for (var i = 0; i < data.length; i++) {

                        $('#DrpUrun').append("<option value='" + data[i].Value + "'>" + data[i].Text + "</Option>");

                    }

                }

            });

        });

    });

</script>

<br />
<div>
    <h2>Kategoriler - Ürünler</h2>
</div>
<br />
<div>
   @Html.Label("Category")
   @Html.DropDownList("DrpCategory",Model.Kategoriler,"--Kategori Seçiniz",new {@class="form-control" })
    <br />
    @Html.Label("Urunler")
    @Html.DropDownList("DrpUrun",Model.Urunler,"--Ürün Seçiniz", new {@class="form-control" })
</div>

