@model E_Ticaret.Models.Siniflar.Category
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Kategori Güncelle</h2>
<br />
@using(Html.BeginForm("KategoriGuncelle","Category",FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x=>x.CategoryName)
        @Html.TextBoxFor(x=>x.CategoryName,new { @class = "form-control" })
        @Html.HiddenFor(x=>x.CategoryID)
    </div>
    <button class="btn btn-warning">Güncelle</button>
}
