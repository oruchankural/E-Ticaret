@using E_Ticaret.Models.Siniflar
@model List<Bill>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>Seri No</th>
        <th>Sıra No</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Toplam Tutar</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Yeni Kalem</th>
    </tr>
    @foreach (var x in Model)
    {
    <tr>
        <td>@x.BillSerialnumber</td>
        <td>@x.BillRownumber</td>
        <td>@x.BillDate</td>
        <td>@x.Time</td>
        <td>@x.ToplamTutar ₺</td>

        <td><a href="/Bill/FaturaGetir/@x.BillID" class="btn btn-warning">Güncelle</a></td>
        <td><a href="/Bill/FaturaDetay/@x.BillID" class="btn btn-default" style="background-color:lightcoral;color:white">Detaylar</a></td>
        <td><a href="/Bill/FaturaDetay/@x.BillID" class="btn btn-default" style="background-color:olivedrab;color:white">Kalem</a></td>
    </tr>

    }
</table>
<a href="/Bill/FaturaEkle/" class="btn btn-primary">Yeni Fatura Giriş</a>
<br />
<br />
<button type="button" class="btn btn-warning" data-toggle="modal" data-target="#Modal1">Popup Penceresi</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Popup Diyalog Ekranı</h2>
            </div>
            <div class="modal-body">
             <button type="button" class="btn btn-danger" data-dismiss="modal" style="float:right;">X</button>
                <table class="table table-bordered">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Tutar</td>
                    </tr>
                    @foreach (var x in Model)
                    {


                        <tr>
                            <td>@x.BillSerialnumber</td>
                            <td>@x.BillRownumber</td>
                            <td>@x.ToplamTutar</td>
                        </tr>
                    }
                </table>

            </div>
        </div>
    </div>
</div>
 
